#include <iostream>
#include <conio.h>
#include <bits/stdc++.h>

using namespace std;

int main()
{
	char arr[10]; 
    int n = sizeof(arr)/sizeof(arr[0]);
	
	// input a char
	cout << "Enter 10 Letters, Numbers or Letters with Number: ";
	cin >> arr;
	cout << endl;
	
	// sorting
    sort(arr, arr+n); 
    
    // statement in sorting
    cout << "Array after sorting: " << endl;
    for (int i = 0; i < n; ++i) 
        cout << arr[i];
				
	_getch();
	return 0;
}
